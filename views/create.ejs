<%- include('./__partial__files/header.ejs') %>
    <%- include('./__partial__files/blognav.ejs') %>

        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h2 class="blue-text darken-1">Create A New Blog</h2>
                </div>
            </div>
            <div class="row">
                <form class="col s12" action="/tradeblog" method="POST">
                  
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="title" name="title" type="text" class="validate">
                            <label for="title">Blog Title:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="snippet" name="snippet" type="text" class="validate">
                            <label for="snippet">Blog Snippet:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="content" name="content" class="materialize-textarea"></textarea>
                            <label for="content">Blog Body</label>
                        </div>
                    </div>

                <!-- INCLUDE BUTTON LINE -->
                <%- include('./__button__files/submit.ejs') %>
                
                </form>
            </div>
        </div>

        <%- include('./__partial__files/footer.ejs') %>